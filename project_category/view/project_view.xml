<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="project_category_search" model="ir.ui.view">
            <field name="name">project_category.search.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="type_id" string="Category"/>
                </field>
                <group expand="0">
                    <filter string="Category" name="type_id" help="Category" context="{'group_by':'type_id'}"/>
                </group>
            </field>
        </record>


        <record id="project_type_form" model="ir.ui.view">
            <field name="name">project_type.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                  <field name="partner_id" position="after">
                    <group colspan="4">
                        <field name="type_id"/>
                    </group>
                    </field>
            </field>
        </record>

        <record id="project_category_form" model="ir.ui.view">
            <field name="name">project.category.form</field>
            <field name="model">project.type</field>
            <field name="arch" type="xml">
                <form string="Category">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Add a description..."/>
                </form>
            </field>
        </record>
    </data>
</openerp>
